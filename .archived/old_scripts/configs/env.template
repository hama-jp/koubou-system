# 工房システム環境変数テンプレート
# このファイルを .env にコピーして使用してください
# cp env.template .env

# ========================================
# システム基本設定
# ========================================

# システムホームディレクトリ
KOUBOU_HOME=/var/koubou

# データベースパス
KOUBOU_DB=/var/koubou/db/koubou.db

# ログレベル (DEBUG, INFO, WARN, ERROR)
KOUBOU_LOG_LEVEL=INFO

# ========================================
# LMStudio設定 (ローカルLLM)
# ========================================

# LMStudioのベースURL
LMSTUDIO_BASE_URL=http://localhost:1234/v1

# 使用するモデル名
LMSTUDIO_MODEL=gpt-oss-20b

# タイムアウト設定（秒）
LMSTUDIO_TIMEOUT=120

# ========================================
# エージェント設定
# ========================================

# デフォルトの親方エージェント
DEFAULT_AGENT=claude-code

# エージェントタイムアウト（秒）
AGENT_TIMEOUT=300

# Claude Code MCP設定パス
CLAUDE_MCP_CONFIG=/var/koubou/config/claude_mcp_config.json

# ========================================
# ワーカー設定
# ========================================

# 最大同時実行ワーカー数
MAX_WORKERS=3

# ワーカーハートビート間隔（秒）
WORKER_HEARTBEAT_INTERVAL=30

# タスクポーリング間隔（秒）
TASK_POLL_INTERVAL=5

# ワーカー自動再起動
WORKER_AUTO_RESTART=true

# ========================================
# 将来のクラウドAPI設定（現在は未使用）
# ========================================

# OpenAI API設定
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-5-medium

# Anthropic API設定
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Google AI API設定
# GOOGLE_AI_API_KEY=your-api-key-here

# ========================================
# セキュリティ設定
# ========================================

# マスターパスワード（将来の暗号化用）
# MASTER_PASSWORD=your-secure-password-here

# APIキー暗号化
ENCRYPT_API_KEYS=false

# ========================================
# モニタリング設定
# ========================================

# ダッシュボード設定
DASHBOARD_ENABLED=true
DASHBOARD_PORT=5000
DASHBOARD_HOST=127.0.0.1

# メトリクス収集
METRICS_ENABLED=true
METRICS_INTERVAL=60

# ========================================
# 開発/デバッグ設定
# ========================================

# デバッグモード
DEBUG_MODE=false

# SQLクエリログ
LOG_SQL_QUERIES=false

# APIリクエスト/レスポンスログ
LOG_API_CALLS=false

# ダミーLLM使用（テスト用）
USE_DUMMY_LLM=false

# ========================================
# システムパス設定
# ========================================

# Pythonパス
PYTHON_PATH=/usr/bin/python3

# SQLiteパス
SQLITE_PATH=/usr/bin/sqlite3

# ========================================
# リソース制限
# ========================================

# 最大メモリ使用量（MB）
MAX_MEMORY_MB=2048

# 最大CPU使用率（%）
MAX_CPU_PERCENT=80

# タスクタイムアウト（秒）
TASK_TIMEOUT=600

# ========================================
# バックアップ設定
# ========================================

# 自動バックアップ
AUTO_BACKUP=true

# バックアップ間隔（時間）
BACKUP_INTERVAL_HOURS=24

# バックアップ保持数
BACKUP_RETENTION_COUNT=7

# バックアップディレクトリ
BACKUP_DIR=/var/koubou/backups